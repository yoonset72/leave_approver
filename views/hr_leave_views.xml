<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_leave_form_custom" model="ir.ui.view">
        <field name="name">hr.leave.form.custom</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">

            <!-- Add hidden technical fields for attrs -->
            <field name="employee_id" position="after">
                <field name="can_approve_first" invisible="1"/>
                <field name="can_approve_second" invisible="1"/>
            </field>

            <!-- Add approver fields -->
            <group position="after">
                <group string="Approval Workflow">
                    <field name="first_approver_id" readonly="1"/>
                    <field name="second_approver_ids" widget="many2many_tags" readonly="1"/>
                </group>
            </group>

            <!-- Extend statusbar states -->
            <field name="state" position="attributes">
                <attribute name="widget">statusbar</attribute>
                <attribute name="statusbar_visible">draft,confirm,validate1,validate,cancel,refuse</attribute>
            </field>

            <!-- Action buttons -->
            <header position="inside">
                <button name="action_confirm" type="object"
                        string="Submit" states="draft"
                        class="btn-primary"/>

                <button name="action_approve" type="object"
                        string="Approve (1st)"
                        states="confirm"
                        attrs="{'invisible': [('can_approve_first','=',False)]}"
                        class="btn-success"/>

                <button name="action_approve" type="object"
                        string="Approve (2nd)"
                        states="validate1"
                        attrs="{'invisible': [('can_approve_second','=',False)]}"
                        class="btn-success"/>

                <button name="action_refuse" type="object"
                        string="Refuse"
                        states="confirm,validate1"
                        class="btn-danger"/>
            </header>

        </field>
    </record>
</odoo>
